{% extends 'base.html.twig' %} {% block title %}Home{% endblock %} {% block body
%}

<div class="row my-3">
  <div class="col-md-12">
    <div class="my-3 d-flex justify-content-between align-items-center">
      <button type="button" class="btn btn-primary position-relative">
        Product
        <span
          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
        >
          {{ products | length }}
          <span class="visually-hidden">unread messages</span>
        </span>
      </button>
      <div>
        {% for categorie in categories %}

        <a
          href="{{ path('product_category' , {category : categorie.id}) }}"
          class="btn btn-sm btn-outline-dark mx-1"
        >
          {{ categorie.name }}
        </a>
        {% endfor %}
        <a
          href="{{ path('app_home') }}"
          class="btn btn-sm btn-outline-dark mx-1"
          >All</a
        >
      </div>
    </div>
    <div class="row">
      {% if products|length %}

      <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for product in products %}
        <div class="col">
          <div class="card h-100">
              <img
                src="{{asset('/uploads/'~product.image)}}"
                height="250px"
                width="250px"
                class="card-img-top"
                alt="{{ product.name }}"
              />
              <div class="card-body">
                <h5 class="card-title fs-2" >{{ product.name }}</h5>
                <p class="card-text">{{ product.description }}</p>
                <p class="card-text text-danger fs-3">{{ product.price }}</p>
                <a href="{{path('app_product_details' , {id : product.id})}}" class="btn btn-primary">view</a>
              </div>
            <div class="card-footer">
              <small class="text-muted">{{ product.category }}</small>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <div class="alert alert-info mt-4">
        Non Product fund
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
