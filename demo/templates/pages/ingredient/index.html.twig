{% extends 'base.html.twig' %}

{% block title %}
    Mes Ingredient
{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

    <div class="container mt-4">


{% if not ingredients is same as([]) %}

    <h1>Mes ingrédients is <span>{{ pagination.getTotalItemCount }}</span></h1>
    <a href="{{ path('new_ingredient') }}" class="btn btn-primary">
				Créer un ingrédient
			</a>

<table class="table table-hover mt-5">
  <thead>
    <tr>
      <th scope="col">numéro</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Date de création</th>
      <th scope="col">Modifier</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <tbody>
    
  

     {% for ingredient in ingredients %}
     <tr class="table-light">
      <th scope="row">{{ ingredient.id }}</th>
      <td>{{ ingredient.nom }}</td>
      <td>{{ ingredient.prix }}</td>
      <td>{{ ingredient.creatAt | date("d/m/Y")}}</td>
      <td>
        <a href="{{ path('edit_ingredient' , { id : ingredient.id}) }}" class="btn btn-info">modifier</a>
      </td>
      <td>
        <a href="{{ path('delete_ingredient' , { id : ingredient.id}) }}" class="btn btn-info">supprimer</a>
      </td>
    </tr>
    




        
      
     {% endfor %}
     
     </tbody>
</table>
<div class="navigation  d-flex justify-content-center">
    {{ knp_pagination_render(pagination) }}
</div>

{% else %}
  <h1>Vous n'avez pas encore ajouté d'ingrédients</h1>
{% endif %}

</div>

{% endblock %}
