{% extends 'base.html.twig' %} {% block title %} nouveau ingregient {% endblock %} 
{% block body %}
<div class="container mt-5">
  <h1>Ajouter nouveau ingreadient</h1>
  {{ form_start(form) }}
  <div class="form-group">
    {{ form_label(form.nom) }}
    {{ form_widget(form.nom) }}
    <div class="form-error">
      {{ form_errors(form.nom) }}
    </div>
  </div>

  <div class="form-group">
    {{ form_label(form.prix) }}
    {{ form_widget(form.prix) }}
    <div class="form-error">
      {{ form_errors(form.prix) }}
    </div>
  </div>

  {{ form_end(form) }}
</div>

{% endblock %}
